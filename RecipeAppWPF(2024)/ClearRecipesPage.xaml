<UserControl x:Class="RecipeAppWPF.ClearRecipesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select a recipe to clear:" FontWeight="Bold" Margin="10" Style="{StaticResource HeadingStyle}" />

        <ListBox Grid.Row="1" x:Name="recipeListBox" Margin="10" />

        <Button Grid.Row="2" Content="Clear Recipe" Click="ClearRecipeButton_Click" Margin="10" Padding="10" Style="{StaticResource RoundButtonStyle}" />
    </Grid>
</UserControl>